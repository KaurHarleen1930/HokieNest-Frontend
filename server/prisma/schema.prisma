// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      String   @default("student") // "student", "staff", "admin"
  suspended Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Listing {
  id           String   @id @default(cuid())
  title        String
  description  String?
  price        Int
  address      String
  beds         Int
  baths        Int
  intlFriendly Boolean  @default(false)
  imageUrl     String
  amenities    String? // JSON string array
  contactEmail String?
  contactPhone String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("listings")
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  listingId String
  createdAt DateTime @default(now())

  @@unique([userId, listingId])
  @@map("favorites")
}